{
  "extends": [
    "react-app",
    "react-app/jest",
    "plugin:react/recommended",
    "plugin:prettier/recommended"
  ],
  "plugins": ["react", "prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "semi": true,
        "trailingComma": "es5",
        "printWidth": 100
      }
    ],
    "react/prop-types": "off",
    "react/react-in-jsx-scope": "off",
    "react/jsx-uses-react": "off",
    "react/display-name": "off",
    "no-console": "warn", 
    "no-debugger": "error", 
    "no-unused-vars": "warn",
    "react/jsx-key": "warn", // Ensure proper usage of keys in lists
    "react/jsx-no-bind": ["warn", { "allowArrowFunctions": true }] 
  }
}
